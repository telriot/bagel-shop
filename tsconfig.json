{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@config/*": ["config/*"],
			"@features/*": ["features/*"],
			"@lib/*": ["lib/*"],
			"@styles/*": ["styles/*"],
			"@public/*": ["public/*"],
			"@declarations/*": ["types/*"],
			"@validators/*": ["validators/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "styles/font.ts"],
	"exclude": ["node_modules"]
}
